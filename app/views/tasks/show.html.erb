<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1 my-4">
      <h4 class="text-center">タスク詳細</h4>
    </div>
    <table class="table col-sm-6 offset-sm-3">
      <tr>
        <th>Title</th>
        <td><%= @task.title %></td>
      </tr>
      <tr>
        <th>Body</th>
        <td><%= @task.body %></td>
      </tr>
      <tr>
        <th>importance</th>
        <td><%= @task.importance %></td>
      </tr>
      <tr>
        <th>urgency</th>
        <td><%= @task.urgency %></td>
      </tr>
      <tr>
        <th>Deadline</th>
        <td><%= @task.deadline %></td>
      </tr>
      <tr>
        <th>fin</th>
        <td><%= @task.fin %></td>
      </tr>
    </table>
    <div class="col-sm-2 offset-sm-3 mt-4">
      <%= link_to tasks_path do %>
      <button type="button" class="btn btn-primary">一覧へ</button>
      <% end %>
    </div>
    <div class="col-sm-2 mt-4">
      <%= link_to edit_task_path(@task) do %>
      <button type="button" class="btn btn-success">編集する</button>
      <% end %>
    </div>
    <div class="col-sm-2 mt-4">
      <%= link_to task_path(@task), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <button type="button" class="btn btn-danger">削除する</button>
      <% end %>
    </div>
  </div>
</div>