<h1>タスク一覧</h1>
<%= link_to "新規登録", new_task_path, class: "btn btn-lg btn-primary" %>

<h4>仕事（優先度：高い）</h4>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>importance</th>
      <th>genre</th>
      <th>Deadline</th>
      <th>fin</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <% if task.genre == "仕事" and task.importance == "高い" %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.body %></td>
      <td><%= task.importance %></td>
      <td><%= task.genre %></td>
      <td><%= task.deadline %></td>
      <td><%= task.fin %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Destroy', task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

