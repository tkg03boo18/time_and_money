<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1 my-4">
      <h4 class="text-center">新規会員登録</h4>
    </div>
    <div class="col-sm-8 offset-sm-2">
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group row">
        <label for="inputName" class="col-sm-3 offset-sm-2 col-form-label">ユーザーネーム</label>
        <div class="col-sm-4">
	    		<%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "aaa" %>
	    	</div>
      </div>
      <div class="form-group row">
	    	<label for="inputEmail" class="col-sm-3 offset-sm-2 col-form-label">メールアドレス</label>
	    	<div class="col-sm-4">
	    		<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
	    	</div>
	    </div>
	    <div class="form-group row">
	    	<label for="inputArea" class="col-sm-3 offset-sm-2 col-form-label">地域</label>
	    	<div class="col-sm-4">
	    		<%= f.select :area, User.areas.keys, {prompt: "選択してください"}, class: "form-control" %>
	    	</div>
	    </div>
	    <div class="form-group row">
	      <label for="inputJob" class="col-sm-3 offset-sm-2 col-form-label">職業</label>
	      <div class="col-sm-4">
	        <%= f.select :job, User.jobs.keys, {prompt: "選択してください"}, class: "form-control" %>
	      </div>
	    </div>
	    <div class="form-group row">
	      <label for="inputPassword" class="col-sm-3 offset-sm-2 col-form-label">パスワード</label>
	      <div class="col-sm-4">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "6文字以上" %>
        </div>
	    </div>
	    <div class="form-group row">
	      <label for="inputPasswordConfirmation" class="col-sm-3 offset-sm-2 col-form-label">パスワード確認用</label>
	      <div class="col-sm-4">
	        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control" %>
	      </div>
      </div>
      <div class="form-group row">
	    	<div class="col-sm-2 offset-sm-5">
         <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
	    </div>
	    <% end %>
    </div>
  </div>
  <div class="row">
		<div class="col-sm-10 offset-sm-1 my-4">
      <h4 class="text-center">既に登録済みの方</h4>
    </div>
    <div class="col-sm-4 offset-sm-4">
      <p class="text-center">
        <%= link_to "こちら", new_user_session_path %> からログインしてください。
      </p>
    </div>
	</div>
</div>
