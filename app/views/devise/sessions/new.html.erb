<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1 my-4">
      <h4 class="text-center">ログイン</h4>
    </div>
    <div class="col-sm-8 offset-sm-2">
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="form-group row">
	    	<label for="inputEmail" class="col-sm-3 offset-sm-2 col-form-label">メールアドレス</label>
	    	<div class="col-sm-4">
	    		<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
	    	</div>
	    </div>
	    <div class="form-group row">
	      <label for="inputPassword" class="col-sm-3 offset-sm-2 col-form-label">パスワード</label>
	      <div class="col-sm-4">
          <%= f.password_field :password, autofocus: true, autocomplete: "current-password", class: "form-control" %>
        </div>
	    </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="form-group row">
	    	<div class="col-sm-2 offset-sm-5">
         <%= f.submit 'ログイン', class: "btn btn-success" %>
        </div>
	    </div>
      <% end %>
    </div>
  </div>
  <div class="row">
		<div class="col-sm-10 offset-sm-1 my-4">
      <h4 class="text-center">会員登録がお済みでない方</h4>
    </div>
    <div class="col-sm-4 offset-sm-4">
      <p class="text-center">
        <%= link_to "こちら", new_user_registration_path %> から会員登録してください。
      </p>
    </div>
	</div>
</div>
