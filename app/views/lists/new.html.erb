<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1 my-4">
      <h4 class="text-center">欲しいものリスト作成</h4>
    </div>
    <div class="col-sm-6 offset-sm-3">
      <%= form_with model: @list, local: true do |f| %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <div class="form-group field">
        <%= f.label :name, class: "form-control-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :date, class: "form-control-label" %>
        <%= f.date_field :date, class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :price, class: "form-control-label" %>
        <%= f.text_field :price, class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :purchased, class: "form-control-label" %>
        <%= f.check_box :purchased %>
      </div>
      <div class="action">
        <%= f.submit class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
