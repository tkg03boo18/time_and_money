<h1>欲しいものリスト一覧</h1>
<%= link_to "新規登録", new_list_path, class: "btn btn-lg btn-primary" %>
<h2>未購入の欲しいものリスト</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
    <% if list.purchased == false %>
    <tr>
      <td><%= list.name %></td>
      <td><%= list.date %></td>
      <td><%= list.price %></td>
      <td><%= link_to 'Show', list_path(list) %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td><%= link_to 'Destroy', list_path(list), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<h2>購入済みの欲しいものリスト</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
    <% if list.purchased == true %>
    <tr>
      <td><%= list.name %></td>
      <td><%= list.date %></td>
      <td><%= list.price %></td>
      <td><%= link_to 'Show', list_path(list) %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td><%= link_to 'Destroy', list_path(list), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
