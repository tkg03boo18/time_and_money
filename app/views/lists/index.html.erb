<div class="container-fluid">
  <div class="row">
    <div class="budget_plan-sidebar col-sm-2">
      <h4 class="text-center">欲しいものリスト</h4>
      <h5 class="text-center"><%= Date.current.strftime('%Y年%m月%d日') %></h5>
      <%= link_to "新規登録", new_list_path, class: "btn btn-block btn-primary", data: { "turbolinks": false } %>
      <nav class="nav d-flex flex-column">
        <%= link_to "収支管理", books_mypage_path, class: "nav-link d-flex justify-content-center border-top p-2 active", data: { "turbolinks": false } %>
        <%= link_to "家計簿", books_path, class: "nav-link d-flex justify-content-center border-top p-2", data: { "turbolinks": false } %>
        <%= link_to "収支計画", budget_plans_path, class: "nav-link d-flex justify-content-center border-top p-2 active", data: { "turbolinks": false } %>
        <%= link_to "欲しいものリスト", lists_path, class: "nav-link d-flex justify-content-center border-top p-2 active", data: { "turbolinks": false } %>
      </nav>
    </div>
    <div class="col-sm-10">
      <div class="row">
        <div class="col-sm-6 py-3">
          <div class="list-card card">
            <div class="card-header bg-danger">未購入の欲しいものリスト</div>
            <div class="card-body">
              <div class="list-group">
                <% @lists.each do |list| %>
                  <% if list.purchased == false %>
                    <%= link_to list_path(list), class: "list-group-item list-group-item-action flex-column align-items-start" do %>
                    <div class="d-flex w-100 justify-content-between">
                      <label class="mb-1"><%= list.name %></label>
                      <small>購入希望期限：<%= list.date %></small>
                    </div>
                    <p class="mb-1">金額：<%= list.price %></p>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-6 py-3">
          <div class="list-card card">
            <div class="card-header bg-info">購入済の欲しいものリスト</div>
            <div class="card-body">
              <div class="list-group">
                <% @lists.each do |list| %>
                  <% if list.purchased == true %>
                    <%= link_to list_path(list), class: "list-group-item list-group-item-action flex-column align-items-start" do %>
                    <div class="d-flex w-100 justify-content-between">
                      <label class="mb-1"><%= list.name %></label>
                      <small>購入希望期限：<%= list.date %></small>
                    </div>
                    <p class="mb-1">金額：<%= list.price %></p>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



