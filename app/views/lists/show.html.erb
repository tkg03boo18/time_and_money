<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1 my-4">
      <h4 class="text-center">欲しいものリスト詳細</h4>
    </div>
    <table class="table col-sm-6 offset-sm-3">
      <tr>
        <th>Name</th>
        <td><%= @list.name %></td>
      </tr>
      <tr>
        <th>Date</th>
        <td><%= @list.date %></td>
      </tr>
      <tr>
        <th>Price</th>
        <td><%= @list.price %></td>
      </tr>
      <tr>
        <th>Purchased</th>
        <td><%= @list.purchased %></td>
      </tr>
    </table>
    <div class="col-sm-2 offset-sm-3 mt-4">
      <%= link_to lists_path do %>
      <button type="button" class="btn btn-primary">一覧へ</button>
      <% end %>
    </div>
    <div class="col-sm-2 mt-4">
      <%= link_to edit_list_path(@list) do %>
      <button type="button" class="btn btn-success">編集する</button>
      <% end %>
    </div>
    <div class="col-sm-2 mt-4">
      <%= link_to list_path(@list), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <button type="button" class="btn btn-danger">削除する</button>
      <% end %>
    </div>
  </div>
</div>