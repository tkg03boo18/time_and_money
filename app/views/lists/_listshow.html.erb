<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header">
      <h5 class="modal-title">Wish List show</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="list-group">
        <div class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <label>品名</label>
            <label><%= @list.name %></label>
          </div>
        </div>
        <div class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <label>金額</label>
            <label>¥<%= @list.price %></label>
          </div>
        </div>
        <div class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <label>購入希望日</label>
            <label><%= @list.date.strftime("%Y/%m/%d") %></label>
          </div>
        </div>
        <div class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <label>ステータス</label>
            <% if @list.purchased == false %>
            <label>未購入</label>
            <% else %>
            <label>購入済</label>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer actions">
      <%= link_to edit_list_path(@list), remote: true do %>
      <button type="button" class="btn btn-success">編集</button>
      <% end %>
      <div id="editlist-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
      <%= link_to list_path(@list), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <button type="button" class="btn btn-danger">削除</button>
      <% end %>
    </div>
  </div>
</div>
