<div class="container-fluid">
  <div class="row">
    <div class="book-sidebar col-sm-2">
      <h2 class="text-center">家計簿</h2>
      <h5 class="text-center"><%= Date.current.strftime('%Y年%m月%d日') %></h5>
      <%= link_to "新規登録", new_book_path, class: "btn btn-block btn-primary", data: { "turbolinks": false } %>
      <div class="card">
        <div class="card-header">
          今月の家計簿内訳
        </div>
        <div class="card-body">
          <h6>収入</h6>
          <h5 class="text-center">¥<%= @incomes_total_amount %></h5>
          <h6>固定費</h6>
          <h5 class="text-center">¥<%= @fixed_total_amount %></h5>
          <h6>変動費</h6>
          <h5 class="text-center">¥<%= @variable_total_amount %></h5>
          <h6>貯蓄・投資</h6>
          <h5 class="text-center">¥<%= @investment_total_amount %></h5>
        </div>
      </div>
      <nav class="nav d-flex flex-column">
        <%= link_to "収支管理", books_mypage_path, class: "nav-link d-flex justify-content-center border-top p-2 active", data: { "turbolinks": false } %>
        <%= link_to "家計簿", books_path, class: "nav-link d-flex justify-content-center border-top p-2", data: { "turbolinks": false } %>
        <%= link_to "収支計画", budget_plans_path, class: "nav-link d-flex justify-content-center border-top p-2 active", data: { "turbolinks": false } %>
        <%= link_to "欲しいものリスト", lists_path, class: "nav-link d-flex justify-content-center border-top p-2 active", data: { "turbolinks": false } %>
      </nav>
    </div>
    <div class="col-sm-10">
      <div class="row">
        <div class="col-sm-12 d-flex justify-content-center">
          <div class="p-2"><%= link_to "前月", books_path(month: params[:month].to_i - 1), data: { "turbolinks": false } %></div>
          <div class="p-2"><h3><%= Time.current.beginning_of_day.since(params[:month].to_i.months).strftime('%Y年%m月') %></h3></div>
          <div class="p-2"><%= link_to "翌月", books_path(month: params[:month].to_i + 1), data: { "turbolinks": false } %></div>
        </div>
        <div class="col-sm-4">
          <div class="card">
            <div class="card-header">
              固定費
            </div>
            <div class="card-body">
              <%= pie_chart @fixed.joins(:sub_category).group("sub_categories.name").sum(:amount), height: "25vh" %>
              <div class="book-card card mt-2">
                <div class="book-card-body card-body">
                  <table class="table table-sm">
                    <thead>
                      <tr class="small">
                        <th>日付</th>
                        <th>カテゴリ</th>
                        <th>内容</th>
                        <th>金額</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @books.each do |book| %>
                      <% if book.main_category_id == 2 %>
                      <tr class="small">
                        <td><%= book.date.strftime('%m/%d') %></td>
                        <td><%= book.sub_category.name %></td>
                        <td><%= book.introduction %></td>
                        <td><%= book.amount %></td>
                        <td><%= link_to 'Show', book_path(book) %></td>
                      </tr>
                      <% end %>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="card">
            <div class="card-header">
              変動費
            </div>
            <div class="card-body">
              <%= pie_chart @variable.joins(:sub_category).group("sub_categories.name").sum(:amount), height: "25vh" %>
              <div class="book-card card mt-2">
                <div class="book-card-body card-body">
                  <table class="table table-sm">
                    <thead>
                      <tr class="small">
                        <th>日付</th>
                        <th>カテゴリ</th>
                        <th>内容</th>
                        <th>金額</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @books.each do |book| %>
                      <% if book.main_category_id == 3 %>
                      <tr class="small">
                        <td><%= book.date.strftime('%m/%d') %></td>
                        <td><%= book.sub_category.name %></td>
                        <td><%= book.introduction %></td>
                        <td><%= book.amount %></td>
                        <td><%= link_to 'Show', book_path(book) %></td>
                      </tr>
                      <% end %>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="card">
            <div class="card-header">
              貯蓄・投資
            </div>
            <div class="card-body">
              <%= pie_chart @investment.joins(:sub_category).group("sub_categories.name").sum(:amount), height: "25vh" %>
              <div class="book-card card mt-2">
                <div class="book-card-body card-body">
                  <table class="table table-sm">
                    <thead>
                      <tr class="small">
                        <th>日付</th>
                        <th>カテゴリ</th>
                        <th>内容</th>
                        <th>金額</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @books.each do |book| %>
                      <% if book.main_category_id == 4 %>
                      <tr class="small">
                        <td><%= book.date.strftime('%m/%d') %></td>
                        <td><%= book.sub_category.name %></td>
                        <td><%= book.introduction %></td>
                        <td><%= book.amount %></td>
                        <td><%= link_to 'Show', book_path(book) %></td>
                      </tr>
                      <% end %>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
