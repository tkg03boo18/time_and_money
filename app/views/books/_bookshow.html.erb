<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header">
      <h5 class="modal-title">Book show</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="list-group">
        <div class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <label>メインカテゴリ</label>
            <label><%= @book.main_category.name %></label>
          </div>
        </div>
        <div class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <label>サブカテゴリ</label>
            <label><%= @book.sub_category.name %></label>
          </div>
        </div>
        <div class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <label>詳細</label>
            <label><%= @book.introduction %></label>
          </div>
        </div>
        <div class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <label>金額</label>
            <label>¥<%= @book.amount %></label>
          </div>
        </div>
        <div class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <label>日付</label>
            <label><%= @book.date.strftime("%Y/%m/%d") %></label>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer actions">
      <%= link_to edit_book_path(@book), remote: true do %>
      <button type="button" class="btn btn-success">編集</button>
      <% end %>
      <div id="editbook-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
      <%= link_to book_path(@book), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <button type="button" class="btn btn-danger">削除</button>
      <% end %>
    </div>
  </div>
</div>
