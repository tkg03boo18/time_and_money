<div class="container">
  <div class="row">
    <div class="col-sm-4 offset-sm-4 my-4">
      <% if @user.is_deleted == true %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:error] %>
      </div>
      <% end %>
      <div class="card">
        <div class="card-header">
          ログイン
        </div>
        <div class="card-body">

          <%= form_with model: @user, url: user_session_path, local: true do |f| %>
            <div class="form-group field">
              <%= f.label :email, "メールアドレス", class: "form-control-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
      	    </div>
      	    <div class="form-group field">
      	      <%= f.label :password, "パスワード", class: "form-control-label" %>
              <%= f.password_field :password, autofocus: true, autocomplete: "current-password", class: "form-control" %>
      	    </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <div class="action">
              <%= f.submit 'ログイン', class: "btn btn-success btn-block" %>
      	    </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
  <div class="row">
		<div class="col-sm-10 offset-sm-1 my-4">
      <h4 class="text-center">会員登録がお済みでない方</h4>
    </div>
    <div class="col-sm-4 offset-sm-4">
      <p class="text-center">
        <%= link_to "こちら", new_user_registration_path %> から会員登録してください。
      </p>
    </div>
	</div>
</div>
