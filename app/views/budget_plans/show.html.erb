<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <h1 class="text-center">収支計画詳細</h1>
    </div>
    <div class="col-sm-6 offset-sm-3">
      <ul class="list-group">
        <label>Category</label>
        <li class="list-group-item"><%= @budget_plan.main_category.name %></li>
        <label>SubCategory</label>
        <li class="list-group-item"><%= @budget_plan.sub_category.name %></li>
        <label>amount</label>
        <li class="list-group-item"><%= @budget_plan.amount %></li>
        <label>date</label>
        <li class="list-group-item"><%= @budget_plan.date.strftime('%Y年%m月') %></li>
      </ul>
    </div>
    <div class="col-sm-2 offset-sm-3 mt-4">
      <%= link_to budget_plans_path do %>
      <button type="button" class="btn btn-primary">一覧へ</button>
      <% end %>
    </div>
    <div class="col-sm-2 mt-4">
      <%= link_to edit_budget_plan_path(@budget_plan) do %>
      <button type="button" class="btn btn-success">編集する</button>
      <% end %>
    </div>
    <div class="col-sm-2 mt-4">
      <%= link_to budget_plan_path(@budget_plan), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <button type="button" class="btn btn-danger">削除する</button>
      <% end %>
    </div>
  </div>
</div>