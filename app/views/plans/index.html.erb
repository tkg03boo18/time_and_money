<div class="container-fluid">
  <div class="row">
    <div class="plan-sidebar col-sm-2">
      <h3><i class="fas fa-calendar-alt"></i> スケジュール</h3>
      <h5><%= Date.current.strftime('%Y年%m月%d日') %></h5>
      <%= link_to new_plan_path, remote: true, class: "btn btn-block btn-primary" do %>
      <i class="fas fa-plus"></i> 作成
      <% end %>
      <div id="plan-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
      <div id="editplan-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
      <nav class="nav d-flex flex-column mt-2">
        <%= link_to plans_path, class: "side-menu nav-link", data: { "turbolinks": false } do %>
        <i class="fas fa-calendar-alt"></i> スケジュール
        <% end %>
        <%= link_to tasks_path, class: "side-menu nav-link", data: { "turbolinks": false } do %>
        <i class="fas fa-tasks"></i> Todoリスト
        <% end %>
      </nav>
      <div class="card">
        <div class="card-header">
          未達成のTodoリスト（緊急 × 重要）
        </div>
        <div class="card-body">
          <div class="list-group">
            <% @tasks.each do |task| %>
              <% if task.fin == false and task.importance == "重要" and task.urgency == "緊急" %>
                <%= link_to task_path(task), class: "list-group-item list-group-item-action flex-column align-items-start" do %>
                <div>
                  <label class="small"><%= task.title %></label>
                  <label class="small">期限：<%= task.deadline.strftime("%m/%d %H:%M") %></label>
                </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <!--<nav class="nav d-flex flex-column">-->
      <!--  <a href="#" class="btn-partial-line nav-link">-->
      <!--    <i class="fa fa-caret-right"></i> BUTTON-->
      <!--  </a>-->
      <!--  <a href="#" class="btn-partial-line nav-link">-->
      <!--    <i class="fa fa-caret-right"></i> BUTTON-->
      <!--  </a>-->
      <!--</nav>-->

    </div>
    <div class="col-sm-10">
      <div id="calendar"></div>
    </div>
  </div>
</div>


