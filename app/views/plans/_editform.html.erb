<div class="modal-dialog">
  <div class="modal-content">

  <%= form_with(model: @plan, local: true) do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="modal-header">
    <h5 class="modal-title">Edit Plan</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <div class="form-group field">
      <%= f.label :title, class: "form-control-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group field">
      <%= f.label :description, class: "form-control-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group field">
      <%= f.label :start_date, class: "form-control-label" %>
      <%= f.datetime_field :start_date, class: "form-control" %>
    </div>

    <div class="form-group field">
      <%= f.label :end_date, class: "form-control-label" %>
      <%= f.datetime_field :end_date, class: "form-control" %>
    </div>

  </div>

  <div class="modal-footer actions">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to 'Destroy', plan_path(@plan), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <% end %>
  </div>
</div>
